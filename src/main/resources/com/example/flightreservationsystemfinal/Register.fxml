<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="15" style="-fx-background-color: #F0F8FF; -fx-padding: 40;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.flightreservationsystemfinal.RegisterController">
    <children>
        <Label text="Create New Passenger Account">
            <font><Font name="System Bold" size="24.0" /></font>
        </Label>
        <GridPane hgap="10" vgap="10" maxWidth="400.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="280.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="First Name:" />
                <TextField fx:id="firstNameField" GridPane.columnIndex="1" />
                <Label text="Last Name:" GridPane.rowIndex="1" />
                <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="Username:" GridPane.rowIndex="2" />
                <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Label text="Phone Number:" GridPane.rowIndex="3" />
                <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <Label text="Password:" GridPane.rowIndex="4" />
                <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                <Label text="Confirm Password:" GridPane.rowIndex="5" />
                <PasswordField fx:id="confirmPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            </children>
        </GridPane>
        <HBox alignment="CENTER" spacing="20" style="-fx-padding: 20 0 0 0;">
            <children>
                <Button onAction="#handleRegisterButtonAction" text="Register" style="-fx-background-color: #90EE90; -fx-font-weight: bold;"/>
                <Button onAction="#handleBackButtonAction" text="Back to Login" style="-fx-background-color: #D3D3D3;"/>
            </children>
        </HBox>
    </children>
</VBox>