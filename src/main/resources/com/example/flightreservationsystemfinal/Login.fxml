<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #0A1931;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.flightreservationsystemfinal.LoginController">
    <children>
        <VBox alignment="CENTER" layoutX="250.0" layoutY="150.0" prefHeight="300.0" prefWidth="300.0" spacing="20.0">
            <children>
                <Text fill="WHITE" text="SkyPass Login">
                    <font><Font name="Arial Bold" size="36.0" /></font>
                </Text>
                <TextField fx:id="usernameField" promptText="Username" />
                <PasswordField fx:id="passwordField" promptText="Password" />
                <Button onAction="#handleLoginButtonAction" prefWidth="150.0" text="Login" />
                <Button onAction="#handleRegisterButtonAction" prefWidth="150.0" text="Register Passenger" />
                <Label fx:id="statusLabel" textFill="RED" />
            </children>
        </VBox>
    </children>
</AnchorPane>