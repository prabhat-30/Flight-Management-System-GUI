<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.flightreservationsystemfinal.ViewFlightsController" spacing="10" style="-fx-padding: 15;">
    <Label text="All Simulated Flights">
        <font><Font name="System Bold" size="18.0"/></font>
    </Label>
    <TableView fx:id="flightsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn text="ID" prefWidth="50"><cellValueFactory><PropertyValueFactory property="id"/></cellValueFactory></TableColumn>
            <TableColumn text="Flight No." prefWidth="100"><cellValueFactory><PropertyValueFactory property="flightNumber"/></cellValueFactory></TableColumn>
            <TableColumn text="Airline" prefWidth="150"><cellValueFactory><PropertyValueFactory property="airlineName"/></cellValueFactory></TableColumn>
            <TableColumn text="Origin" prefWidth="80"><cellValueFactory><PropertyValueFactory property="originCity"/></cellValueFactory></TableColumn>
            <TableColumn text="Destination" prefWidth="80"><cellValueFactory><PropertyValueFactory property="destinationCity"/></cellValueFactory></TableColumn>
            <TableColumn text="Capacity" prefWidth="80"><cellValueFactory><PropertyValueFactory property="capacity"/></cellValueFactory></TableColumn>
            <TableColumn text="Available Seats" prefWidth="110"><cellValueFactory><PropertyValueFactory property="availableSeats"/></cellValueFactory></TableColumn>
            <TableColumn text="Fare" prefWidth="100"><cellValueFactory><PropertyValueFactory property="fare"/></cellValueFactory></TableColumn>
            <TableColumn text="Is Available?" prefWidth="100"><cellValueFactory><PropertyValueFactory property="available"/></cellValueFactory></TableColumn>
        </columns>
    </TableView>
    <HBox alignment="CENTER" spacing="20" style="-fx-padding: 10;">
        <Button onAction="#handleAddFlight" text="Add New Flight" style="-fx-background-color: #90EE90;"/>
        <Button onAction="#handleEditFlight" text="Edit Selected Flight"/>
        <Button onAction="#handleRemoveFlight" text="Remove Selected Flight" style="-fx-background-color: #F08080;"/>
        <Button onAction="#handleRefresh" text="Refresh List"/>
    </HBox>
</VBox>